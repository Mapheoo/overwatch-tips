<div class="container">
    <div class="row">
        <div class="col-md-8 pull-right home-welcome">
            <h1 class="<%= @is_mobile ? "h1-home-mobile" : "h1-home" %>">WELCOME TO OVERWATCH - TIPS</h1>
        </div>
        <div class="col-md-8 col-xs-12 pull-right">
            <p class="<%= @is_mobile ? "h2-home-mobile" : "h2-home" %>">A platform to share advices about Overwatch</p>
        </div>
    </div>
</div>

<div class="standard-margin <%="jumbotron custom-jumbotron" if !@is_mobile %> ">
    <div class="container">
        <p class="text-center">
            <%= link_to "> Show me more tips ! <", character_path(@random_character), class: "btn btn-lg btn-success home-primary-button" %>
        </p>
        
        <div class="row">
            <% @tips_hash.each do |category, tips| %>
                <div class="col-md-4">
                    <h2><%= category.to_s.humanize %> tips</h2>
                    <% tips.each do |tip| %>
                        <div class="">
                            <%= render partial: "tips/show", locals: { tip: tip, with_gaming_object_description: true, klass: "" } %>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>

    </div>
</div>

<div style="display: none">
    <%= react_component("HelloWorld", props: { name: "wapiti" }) %>
</div>

